{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  // Database
  "ConnectionStrings": {
    "DatabaseName": "",
    "MongoDbConnection": "{{connection-string}}"
  },

  // Health Check
  "Health": {
    "Uri": "health"
  },

  // Message Broker
  "EventBus": {
    "Host": "teste",
    "VirtualHost": "teste",
    "User": "teste",
    "Pwd": "teste"
  },

  // APM
  "ElasticApm": {
    "TransactionSampleRate": 1.0,

    "ServiceName": "Base Service",
    "ServerUrls": "",
    "SecretToken": "",

    "CaptureBody": "all",
    "CaptureBodyContentTypes": "application/x-www-form-urlencoded*, text/*, application/json*, application/xml*",
    "CloudProvider": "none"
  },

  // Logging
  "Logstash": {
    "ServiceName": " - Base Service",
    "Environment": "{{environment}}" // Development, Staging, Production
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Debug", "Serilog.Sinks.Http" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Information"
      },
      {
        "Name": "DurableHttpUsingFileSizeRolledBuffers",
        "Args": {
          "requestUri": "{{logstash-uri}}",
          "textFormatter": "Serilog.Formatting.Elasticsearch.ElasticsearchJsonFormatter, Serilog.Formatting.Elasticsearch",
          "batchFormatter": "Serilog.Sinks.Http.BatchFormatters.ArrayBatchFormatter, Serilog.Sinks.Http",
          "bufferFileSizeLimitBytes": "5242880"
        }
      }
    ]
  },

  // Authorization
  "": {
    "Id": ""
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "{{tenant-hash}}",
    "ClientId": "{{api-hash}}"
  }
}
